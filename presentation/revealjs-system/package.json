{
  "name": "telekom-presentation-system",
  "version": "1.0.1",
  "description": "Professional presentation system based on reveal.js for Telekom Architecture Training",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "build": "node scripts/build-presentations.js",
